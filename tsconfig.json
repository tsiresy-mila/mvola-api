{
  "compilerOptions": {
      "target": "es5",
      "strict": true,
      "declaration": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "sourceMap": true,
      "listEmittedFiles": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "outDir": "./esm2015",
      "declarationDir": "./esm2015/",
      "lib": [ "es2015" ]

  },
  "include": [
      "lib"
  ],
  "exclude": [
      "node_modules",
      "exemple",
      "esm2015",
      "template"
  ]
}